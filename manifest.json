{
  "manifest_version": 3,
  "name": "X-Proxy",
  "version": "1.0.0",
  "description": "A modern proxy switcher for Chrome with HTTP(S) and SOCKS5 support",
  "permissions": [
    "proxy",
    "storage",
    "webRequest",
    "webRequestAuthProvider",
    "notifications",
    "alarms",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "dist/icons/icon-16.png",
      "32": "dist/icons/icon-32.png",
      "48": "dist/icons/icon-48.png",
      "128": "dist/icons/icon-128.png"
    }
  },
  "icons": {
    "16": "dist/icons/icon-16.png",
    "32": "dist/icons/icon-32.png",
    "48": "dist/icons/icon-48.png",
    "128": "dist/icons/icon-128.png"
  },
  "options_page": "options.html"
}
